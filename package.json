{
  "name": "essentia-audio-analysis",
  "version": "1.0.0",
  "description": "Cloud-based audio analysis service with Essentia.js, providing comprehensive audio feature extraction, beat markers, section detection, and songwriting metadata at song/section/loop levels. Supports both REST API and MCP server interfaces.",
  "main": "worker.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test tests/e2e/",
    "test:e2e:headed": "playwright test tests/e2e/ --headed",
    "test:e2e:ui": "playwright test tests/e2e/ --ui",
    "test:e2e:workflow": "playwright test tests/e2e/workflow-orchestrator.spec.js",
    "test:e2e:essentia": "playwright test tests/e2e/essentia-audio-analysis.spec.js",
    "test:e2e:sample": "playwright test tests/e2e/sample-workflow.spec.js",
    "test:e2e:full": "playwright test tests/e2e/all-essentia-workflow.spec.js",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "build": "wrangler deploy --dry-run",
    "start": "node index.js",
    "dev:legacy": "nodemon index.js",
    "deploy:gcp": "gcloud builds submit --tag gcr.io/grinder-cloud/essentia --timeout=9000 && gcloud run deploy essentia --image gcr.io/grinder-cloud/essentia --region=us-east1 --platform managed --allow-unauthenticated --min-instances=0 --max-instances=2 && gcloud run services update-traffic essentia --region=us-east1 --to-revisions LATEST=100"
  },
  "author": "Mansoor",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-modules-commonjs": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@cloudflare/workers-types": "^4.20240925.0",
    "@playwright/test": "^1.45.0",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.13.0",
    "js-yaml": "^4.1.0",
    "wrangler": "^3.78.12"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "essentia.js": "^0.1.3",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "audio-analysis",
    "essentia",
    "music-information-retrieval",
    "beat-detection",
    "song-structure",
    "mcp-server",
    "cloudflare-workers",
    "wasm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/memorymusicllc/Essentia.git"
  }
}
